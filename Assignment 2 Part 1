#include<stdio.h>
#include <iostream>
#include <stdlib.h>

using namespace std;
int main () {

  int number;
  cout << "Enter any Integer: ";
  cin >> number;



   if (number % 2 ==0)
   { cout << number << " is even number "; }
  else
   { cout << number << " is odd number "; }

   system("PAUSE");
   return 0;

  }
